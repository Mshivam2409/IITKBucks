{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build/",
    "baseUrl": "src/",
    "paths": {
      "*": ["node_modules/*"]
    },
    "allowJs": true
  },
  "include": ["src"]
}
